@using PagedList.Mvc
@using PagedList
@model IPagedList<MyMvcCourse.Models.Market>

@{
    ViewBag.Title = "各夜市分頁";
}

<h2>各夜市分頁</h2>

<table class="table table-striped table-hover table-condensed" >
    <tr>
        <th>編號</th>
        <th>名稱</th>
        <th>地址</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
        </tr>

    }
</table>

@Html.PagedListPager(Model, page => Url.Action("Index",new { page }))

